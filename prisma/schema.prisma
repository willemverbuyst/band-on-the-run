generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Musician {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Band {
    id          String     @id @default(auto()) @map("_id") @db.ObjectId
    name        String     @unique
    bio         String?
    genre       String[]
    foundedYear Int
    country     String
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
    bandShows   BandShow[]
}

type Location {
    city    String
    country String
}

model Show {
    id        String     @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    date      DateTime
    showType  ShowType
    location  Location
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    bandShows BandShow[]
}

model BandShow {
    id     String @id @default(auto()) @map("_id") @db.ObjectId
    bandId String @db.ObjectId
    showId String @db.ObjectId
    band   Band   @relation(fields: [bandId], references: [id])
    show   Show   @relation(fields: [showId], references: [id])

    @@index([bandId, showId], name: "band_show_index")
}

enum ShowType {
    FESTIVAL
    CLUB
    TV
    RADIO
}
